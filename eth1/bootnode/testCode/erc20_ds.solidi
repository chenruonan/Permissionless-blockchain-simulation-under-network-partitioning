pragma solidity ^0.8.0;

contract Counter {
    int256 public counter;

    constructor() {
        counter = 10000; 
    }

    function decrementByThree() public {
        counter -= 3; 
    }

    function decrementByFour() public {
        counter -= 4; 
    }

    function getCounter() public view returns (int256) {
        return counter; 
    }
}
